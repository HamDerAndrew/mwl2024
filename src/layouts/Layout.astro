---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from "astro:transitions";
import { Image } from 'astro:assets';
import OpenGraphLogo from "../assets/opengraphmwlogoyellow.png";
import Logo from "../assets/mwlogo3-yellow.png";
import { getLangFromUrl } from '../i18n/utils';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url)
---

<!doctype html>
<html lang={lang || "en"}>
	<head>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta charset="UTF-8" />
		<meta name="description" content="Developers specialized in Umbraco and Azure">
		<meta name="viewport" content="width=device-width" />
		<meta name="keywords" content="Umbraco CMS, Umbraco, Umbraco Cloud, Azure, CI/CD, Continuous integration, Umbraco Cloud, DevOps, Azure DevOps">
		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://bespoke-sable-170f6c.netlify.app">
		<meta property="og:type" content="website">
		<meta property="og:title" content="MWL">
		<meta property="og:description" content="Developers specialized in Umbraco and Azure">
		<meta property="og:image" content={OpenGraphLogo.src}>
		<meta property="og:image:width" content="1200"/>
		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="bespoke-sable-170f6c.netlify.app">
		<meta property="twitter:url" content="https://bespoke-sable-170f6c.netlify.app">
		<meta name="twitter:title" content="MWL">
		<meta name="twitter:description" content="Developers specialized in Umbraco and Azure">
		<meta name="twitter:image" content={OpenGraphLogo.src}>
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Signika:wght@400;700&family=Zilla+Slab:wght@700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Navbar
			imagePath="/src/assets/mwlogo3-yellow.png"
			altText="The MWL logo. MWL letters and a monkey on the right",
			lang={lang}
		/>
		<slot />
		<Footer 
			imagePath="/src/assets/mwlogo3-yellow.png"
			altText="The MWL logo. MWL letters and a monkey on the right"
		/>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--mwl-dark: #1D232A;
		--mwl-purple: #4C1D95;
		--mwl-yellow: #D8BB1E;
		--mwl-yellow-bright: #FFD700;
		--mwl-white-border: #EAE6F1;
		
	}
	html {
		font-family: 'Signika', sans-serif;
		background: var(--mwl-dark);
	}
</style>
